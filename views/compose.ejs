<%- include('partials/header') %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <label for="composeTitle" class="form-label">Title</label><br>
    <input type="text" name="composeTitle" style="width: 100%" class="form-control"><br>
    <label for="composePost" class="form-label">Post</label><br>
    <textarea name = "composePost" style="width: 100%; resize: none; height: 250px" class="form-control"></textarea><br>
    <button type="submit" name="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') %>